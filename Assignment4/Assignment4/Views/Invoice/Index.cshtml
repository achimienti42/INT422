@model IEnumerable<Assignment4.Controllers.InvoiceBase>

@{
    ViewBag.Title = "Index";
}

<h2>List of Invoices</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Customer ID
        </th>
        <th>
            Invoice Date
        </th>
        <th>
            Billing Address
        </th>
        <th>
            Billing City
        </th>
        <th>
            Billing State
        </th>
        <th>
            Billing Country
        </th>
        <th>
            Postal Code
        </th>
        <th>
            Invoice Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingCountry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingPostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.InvoiceId })
        </td>
    </tr>
}

</table>
